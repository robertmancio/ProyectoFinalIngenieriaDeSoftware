@using BulkyBook.Models.ViewModels
@model IEnumerable<ApplicationUser> 
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de requerimientos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ApplicationUser" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;  Crear requerimiento nuevo
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nombre de usuario
                </th>
                <th>
                    Departamento
                </th>
                <th>
                    Disponibilidad
                </th>
                <th>
                    Email
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                     <td width="20%">
                        @obj.Department
                    </td>
                     <td width="20%">
                        @obj.PhoneNumber
                    </td>
                     <td width="50%">
                        @obj.Availability
                    </td>
                     <td width="20%">
                        @obj.Email
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>